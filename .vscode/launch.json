    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Tools - Database - Create",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tools/database-create.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/.environment/development.env",
                "--create-data"
            ]
        },
        {
            "name": "Debug - Services - REST API v1",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src",
            "env": {
                "FLASK_APP": "my_rest_api_v1",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": false,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.environment/development.env"
        }
    ]
}