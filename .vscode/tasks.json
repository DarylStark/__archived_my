{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Development - Database - Create (no drop, no data)",
            "type": "shell",
            "command": "${workspaceFolder}/env/bin/python",
            "args": [
                "tools/database-create.py",
                "${workspaceFolder}/.environment/development.env"
            ],
            "problemMatcher": []
        },
        {
            "label": "Development - Database - Create (no drop, with data)",
            "type": "shell",
            "command": "${workspaceFolder}/env/bin/python",
            "args": [
                "tools/database-create.py",
                "${workspaceFolder}/.environment/development.env",
                "--create-data"
            ],
            "problemMatcher": []
        },
        {
            "label": "Development - Database - Create (with drop and with data)",
            "type": "shell",
            "command": "${workspaceFolder}/env/bin/python",
            "args": [
                "tools/database-create.py",
                "${workspaceFolder}/.environment/development.env",
                "--create-data",
                "--drop-tables"
            ],
            "problemMatcher": []
        },
        {
            "label": "Development - Database - Create (with drop and no data)",
            "type": "shell",
            "command": "${workspaceFolder}/env/bin/python",
            "args": [
                "tools/database-create.py",
                "${workspaceFolder}/.environment/development.env",
                "--drop-tables"
            ],
            "problemMatcher": []
        },
        {
            "label": "My Ganymede - Start - VueJS development server",
            "type": "npm",
            "script": "vuejs-serve",
            "path": "${workspaceFolder}/src/my_ganymede/nodejs-project",
            "options": {
                "cwd": "${workspaceFolder}/src/my_ganymede/nodejs-project"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "My Ganymede - Compile - VueJS project",
            "type": "npm",
            "script": "vuejs-build",
            "path": "${workspaceFolder}/src/my_ganymede/nodejs-project",
            "options": {
                "cwd": "${workspaceFolder}/src/my_ganymede/nodejs-project"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "My Ganymede - Start - SCSS watcher",
            "type": "npm",
            "script": "scss-watch",
            "path": "${workspaceFolder}/src/my_ganymede/nodejs-project",
            "options": {
                "cwd": "${workspaceFolder}/src/my_ganymede/nodejs-project"
            },
            "group": "test",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "My Ganymede - Compile - SCSS files",
            "type": "npm",
            "script": "scss-build",
            "path": "${workspaceFolder}/src/my_ganymede/nodejs-project",
            "options": {
                "cwd": "${workspaceFolder}/src/my_ganymede/nodejs-project"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "My Ganymede - Install - Copy the compiled NodeJS files to My Ganymede",
            "type": "shell",
            "command": "${workspaceFolder}/env/bin/python",
            "args": [
                "tools/copy-compiled-nodejs-files.py"
            ],
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "My Ganymede - Compile - Full NodeJS source and copy to Ganymede",
            "dependsOrder": "sequence",
            "dependsOn": [
                "My Ganymede - Compile - VueJS project",
                "My Ganymede - Compile - SCSS files",
                "My Ganymede - Install - Copy the compiled NodeJS files to My Ganymede"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "My Ganymede - Develop - Run VueJS development server and SCSS watcher",
            "dependsOrder": "parallel",
            "dependsOn": [
                "My Ganymede - Start - VueJS development server",
                "My Ganymede - Start - SCSS watcher"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}