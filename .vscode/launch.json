    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug - Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/src/services",
            "env": {
                "FLASK_APP": "my_backend",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": false,
            "justMyCode": true
        },
        {
